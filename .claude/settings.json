{
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "1200000",
    "BASH_MAX_TIMEOUT_MS": "1200000",
    "MAX_THINKING_TOKENS": "31999"
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(mkdir:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(cat:*)",
      "Bash(cargo:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "Bash(jq:*)",
      "Bash(rg:*)",
      "Bash(cat:*)",
      "Bash(rustc:*)",
      "Bash(kill:*)",
      "Bash(chmod:*)",
      "Bash(sccache:*)",
      "mcp__serena__check_onboarding_performed",
      "mcp__serena__onboarding",
      "mcp__serena__write_memory",
      "mcp__serena__search_for_pattern",
			"mcp__serena__find_referencing_symbols",
			"mcp__serena__list_dir",
			"mcp__serena__find_symbol",
			"mcp__serena__find_file"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(git add:*)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)"
    ],
    "additionalDirectories": [
      "/workspaces/kopi-workspace/ppa-kopi",
      "/workspaces/kopi-workspace/kopi-vm.github.io",
      "/workspaces/kopi-workspace/metadata"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccusage statusline --visual-burn-rate emoji",
    "padding": 0
  }
}
